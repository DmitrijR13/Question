@model Questionnaire.WebSite.Models.ComplaintModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
    <head>
        <meta charset="windows-1251" />
        <title>Ввод жалобы</title>
        
        <link href="@Url.Content("~/Content/complaint.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>

        <!--[if IE]>
       <script>
           document.createElement('header');
           document.createElement('nav');
           document.createElement('section');
           document.createElement('article');
           document.createElement('aside');
           document.createElement('footer');
       </script>
   <![endif]-->
    </head>
    <body>
        
        <div class="admin">
           @using (Html.BeginForm())
           {
           <div class="loginForm"> 
                <div class="popupForm">
                    <div class="popupItem">
                        <div class="title">Фамилия:</div>
                        @Html.TextBoxFor(m => m.LastName)
                        @Html.ValidationMessageFor(m => m.LastName)
                    </div>
                    <div class="popupItem">
                        <div class="title">Имя:</div>
                        @Html.TextBoxFor(m => m.FirstName)
                        @Html.ValidationMessageFor(m => m.FirstName)
                    </div>
                    <div class="popupItem">
                        <div class="title">Отчество:</div>
                        @Html.TextBoxFor(m => m.SecondName)
                        @Html.ValidationMessageFor(m => m.SecondName)
                    </div>
                    <div class="popupItem">
                        <div class="title">Медицинская организация:</div>
                        @Html.DropDownListFor(m => m.FederalCodeMO, new SelectList(Model.MOs, "Value", "Text", Model.FederalCodeMO), "-- Выберите --")
                        @Html.ValidationMessageFor(m => m.FederalCodeMO)
                    </div>
                    <div class="popupItem">
                        <div class="title">Характер обращения:</div>
                        @Html.DropDownListFor(m => m.TypeDealID, new SelectList(Model.Deals, "Value", "Text", Model.TypeDealID), "-- Выберите --")
                        @Html.ValidationMessageFor(m => m.TypeDealID)
                    </div>
                    <div class="popupItem">
                        <div class="title">Телефон:</div>
                        @Html.TextBoxFor(m => m.Phone)
                        @Html.ValidationMessageFor(m => m.Phone)
                    </div>
                    <div class="popupItem">
                        <div class="title">Обращение:</div>
                        @Html.TextAreaFor(m => m.Text)
                        @Html.ValidationMessageFor(m => m.Text)
                    </div>
                    <div class="popupItem">
                        @Html.ShowCaptcha("Complaint", "Captcha", 400, 50)
                        @Html.Editor("captcha")<br />
                        @Html.ValidationMessage("captcha")
                    </div>
                </div>
                <div class="popupAction">                    
                    <a href="#" class="submit" onclick="$(this).closest('form').submit(); return false;">Отправить</a>
                </div>
           </div>
           }
        </div>
    </body>
</html>
