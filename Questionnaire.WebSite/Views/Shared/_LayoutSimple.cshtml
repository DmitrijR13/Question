<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link rel="Shortcut Icon" href="@Url.Content("~/Content/images/A_1.ico")" />

        @*<meta name="viewport" content="width=device-width" />*@

        @Styles.Render("~/Content/themes/base/css")
        @Styles.Render("~/Content/css")

        @if (Session.IsBlind)
        {
            @Styles.Render("~/Content/blind/css")
        }
        else
        {
            @Styles.Render("~/Content/unblind/css")
        }

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jsproj")
        @*@Scripts.Render("~/bundles/bootstrap")*@

        @RenderSection("Scripts", required: false)
        @RenderSection("head", required: false)
    </head>
    <body>
        @RenderBody()

        <div>
            <div id="serviceWindow">
                <div id="serviceWindowMessage" class="serviceWindowMessage">
                </div>
            </div>

            <div id="confirmWindow" style="display:none">
                <span>Вы уверены?</span><br />
                <input class="btnYesConfirm" type="button" value="Да" />
                <input class="btnNoConfirm" type="button" value="Нет" />
            </div>
        </div>    
    </body>
</html>